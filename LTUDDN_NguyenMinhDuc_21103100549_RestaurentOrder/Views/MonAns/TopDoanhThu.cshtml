
@{
    ViewBag.Title = "TopDoanhThu";
}

<h2>Món ăn có tổng doanh thu cao nhất</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã Món</th>
            <th>Tên Món</th>
            <th>Loại Món</th>
            <th>Đơn Giá</th>
            <th>Số Lượng Tồn</th>
            <th>Tổng Doanh Thu</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
        <tr>
            <td>@Model.MonAn.MaMon</td> 
            <td>@Model.MonAn.TenMon</td> 
            <td>@Model.MonAn.LoaiMon</td> 
            <td>@Model.MonAn.DonGia.ToString("C0")</td> 
            <td>@Model.MonAn.SoLuongTon</td> 
            <td>@Model.TongDoanhThu.ToString("C0")</td> 
        </tr>
        }
        else
        {
        <tr>
            <td colspan="6" class="text-center">Không có dữ liệu</td>
        </tr>
        }
    </tbody>
</table>

